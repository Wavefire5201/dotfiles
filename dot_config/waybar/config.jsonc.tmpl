// -*- mode: jsonc -*-
[
  {
    // Main monitor waybar config
    "layer": "top",
    "mode": "dock",
    "reload_style_on_change": true,
    {{- if eq .chezmoi.hostname "galileo" }}
    "output": "DP-1",
    "position": "bottom",
    {{- else if eq .chezmoi.hostname "zephyrus" }}
    "output": "eDP-1",
    "position": "top",
    {{- end }}
    "height": 30,
    // Modules
    "modules-left": [
      "hyprland/workspaces",
      {{- if eq .chezmoi.hostname "zephyrus" }}
      "hyprland/window"
      {{- end }}
    ],
    {{- if eq .chezmoi.hostname "galileo" }}
    "modules-center": [
      "hyprland/window"
    ],
    {{- end }}
    "modules-right": [
      "group/tray",
      "temperature",
      "memory",
      "cpu",
      {{- if eq .chezmoi.hostname "zephyrus" }}
      "backlight",
      {{- end }}
      "pulseaudio",
      {{- if eq .chezmoi.hostname "zephyrus" }}
      "battery",
      {{- end }}
      "clock",
      // "network",
      // "bluetooth",
      // "tray",
      // "custom/powermenu",
      // "group/powermenu",
      "custom/swaync"
    ],
    // Modules configuration
    "hyprland/window": {
      "max-length": 60
    },
    "hyprland/workspaces": {
      {{- if eq .chezmoi.hostname "zephyrus" }}
      "all-outputs": true,
      {{- end }}
      // "on-scroll-up": "hyprctl dispatch workspace e+1",
      // "on-scroll-down": "hyprctl dispatch workspace e-1"
    },
    "idle_inhibitor": {
      "format": "{icon}",
      "format-icons": {
        "activated": " ",
        "deactivated": " "
      }
    },
    "power-profiles-daemon": {
      "format": "{icon}",
      "tooltip-format": "Power profile: {profile}\nDriver: {driver}",
      "tooltip": true,
      "format-icons": {
        "default": "",
        "performance": "",
        "balanced": "",
        "power-saver": ""
      }
    },
    "tray": {
      "spacing": 10
    },
    "clock": {
      "timezone": "America/Chicago",
      "format": "{:%A %b %d %I:%M %p}",
      "tooltip": false,
      "format-alt": false
    },
    // Hardware information
    "cpu": {
      "format": "C {usage}%",
      "interval": 1,
      "tooltip": false
    },
    "memory": {
      "format": "{used}GB",
      "interval": 1,
      "tooltip": false
    },
    "temperature": {
      {{- if eq .chezmoi.hostname "galileo" }}
      "hwmon-path": "/sys/devices/platform/coretemp.0/hwmon/hwmon9/temp1_input",
      {{- end }}
      "format": "{temperatureC}°C",
      "format-alt": false,
      "interval": 1,
      "tooltip": false
    },
    "backlight": {
      "format": "B {percent}%{icon}",
      "tooltip": false
    },
    "battery": {
      "states": {
        // "good": 95,
        "warning": 30,
        "critical": 15
      },
      "format": "{capacity}%",
      "format-full": "{capacity}%",
      "format-charging": "{capacity}% ",
      "format-plugged": "{capacity}% ",
      "format-alt": "{time}",
      "interval": 30
    },
    // Connection information
    "network": {
      "format-wifi": "{icon}",
      "format-ethernet": "󰈀 ",
      "tooltip-format": "{ifname} via {gwaddr}",
      "format-icons": [
        "󰤟 ",
        "󰤢 ",
        "󰤥 ",
        "󰤨 "
      ],
      "format-disconnected": "󰤭 ",
      // "format-alt": "{ipaddr}",
      "on-click": "kitty nmtui"
    },
    "bluetooth": {
      "format": "",
      "format-disabled": "",
      "format-connected": " {num_connections} connected",
      "tooltip-format": "{controller_alias}\t{controller_address}",
      "tooltip-format-connected": "{controller_alias}\t{controller_address}\n\n{device_enumerate}",
      "tooltip-format-enumerate-connected": "{device_alias}\t{device_address}"
    },
    // Media
    "pulseaudio": {
      "format": "V {volume}%",
      "format-muted": "V M%",
      "on-click": "pavucontrol"
    },
    "mpris": {
      "format": "{title} - {artist}",
      "format-paused": "<i>{title} - {artist}</i>",
      "format-stopped": "",
      "interval": 1,
      "tooltip": false,
      "ignored-players": [
        "brave",
        "firefox"
      ]
    },
    // Custom modules
    "custom/powermenu": {
      "format": "  ⏻  ",
      "tooltip": false,
      "on-click": "wlogout"
    },
    "custom/swaync": {
      "format": " ",
      "tooltip": false,
      "on-click": "swaync-client -t -sw"
    },
    "custom/drawer": {
      "format": " ",
      "tooltip": false
    },
    // Groups
    "group/tray": {
      "orientation": "inherit",
      "drawer": {
        "transition-duration": 300,
        "children-class": "tray-drawer",
        "transition-left-to-right": false,
        "click-to-reveal": true
      },
      "modules": [
        "custom/drawer",
        "tray",
        {{- if eq .chezmoi.hostname "zephyrus" }}
        "power-profiles-daemon"
        {{- end }}
      ]
    }
  },
  {{- if eq .chezmoi.hostname "galileo" }}
  {
    // second monitor waybar config
    "layer": "top",
    "reload_style_on_change": true,
    "output": "DP-2",
    "position": "bottom",
    "height": 30,
    "modules-left": [
      "hyprland/workspaces",
      "mpris"
    ],
    "modules-right": [
      "temperature",
      "memory",
      "cpu",
      "pulseaudio",
      "clock"
    ],
    "hyprland/workspaces": {
      // "on-scroll-up": "hyprctl dispatch workspace e+1",
      // "on-scroll-down": "hyprctl dispatch workspace e-1"
    },
    "clock": {
      "timezone": "America/Chicago",
      "format": "{:%A %b %d %I:%M %p}",
      "tooltip": false,
      "format-alt": false
    },
    "cpu": {
      "format": "C {usage}%",
      "interval": 1,
      "tooltip": false
    },
    "memory": {
      "format": "{used}GB",
      "tooltip": false
    },
    "temperature": {
      "hwmon-path": "/sys/devices/platform/coretemp.0/hwmon/hwmon9/temp1_input",
      "format": "{temperatureC}°C",
      "format-alt": false,
      "interval": 1,
      "tooltip": false
    },
    "pulseaudio": {
      "format": "V {volume}%",
      "on-click": "pavucontrol"
    },
    "mpris": {
      "format": "{title} - {artist}",
      "format-paused": "<i>{title} - {artist}</i>",
      "format-stopped": "",
      "interval": 1,
      "tooltip": false,
      "ignored-players": [
        "brave",
        "firefox"
      ]
    }
  }
  {{- end }}
]
